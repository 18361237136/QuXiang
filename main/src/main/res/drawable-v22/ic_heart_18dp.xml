<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/liked"
        android:drawable="@drawable/ic_heart_full_18dp"
        android:state_checked="true" />

    <item
        android:id="@+id/not_liked"
        android:drawable="@drawable/ic_heart_empty_18dp"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/heart_fill_18dp"
        android:fromId="@id/not_liked"
        android:toId="@id/liked" />

    <transition
        android:drawable="@drawable/heart_empty_18dp"
        android:fromId="@id/liked"
        android:toId="@id/not_liked" />

</animated-selector>